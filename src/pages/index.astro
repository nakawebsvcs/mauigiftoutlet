<style lang="less">
  /* STYLES FOR ABOVE THE FOLD */

 /*-- -------------------------- -->
<---           Hero             -->
<--- -------------------------- -*/

  /* Mobile - 360px */
  @media only screen and (min-width: 0rem) {
    #hero-1785 {
      /* 200px - 300px - leaving extra space for the navigation */
      padding: clamp(12.5rem, 25.95vw, 18.75em) (16/16rem);
      /* Change to visible to allow the wave to extend beyond */
      overflow: visible;
      position: relative;
      z-index: 1;

      .cs-container {
        width: 100%;
        max-width: (1280/16rem);
        margin: auto;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-wrap: wrap;
        gap: (48/16rem);
      }

      .cs-content {
        text-align: center;
        width: 100%;
        max-width: (750/16rem);
        position: relative;
        z-index: 5;
      }

      .cs-title {
        /* 49px - 84px */
        font-size: clamp(4rem, 8vw, 6.5rem);
      }

      .cs-title,
      .cs-text {
        color: var(--bodyTextColorWhite);
      }

      .cs-text {
        font-size: clamp(1rem, 1.5vw, 2rem);
        margin-bottom: (32/16rem);
      }

      .cs-button-group {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        gap: (8/16rem);
        position: relative;
        z-index: 10;
      }

      .cs-button-solid {
        margin-bottom: calc(16 / 16 * 1rem);
        position: relative;
        z-index: 5;
        transition: background-color 0.3s ease, color 0.3s ease;
        
        /* Add hover styles */
        &:hover {
          background-color: var(--primaryDark);
          color: #fff;
        }
      }

      .cs-background {
        width: 100%;
        height: 100%;
        display: block;
        position: absolute;
        top: 0;
        left: 0;
        z-index: -2;

        &:before {
          /* Overlay */
          content: "";
          width: 100%;
          height: 100%;
          background: #000;
          /* prevents the cursor from interacting with it */
          pointer-events: none;
          opacity: 0.5;
          display: block;
          position: absolute;
          top: 0;
          left: 0;
          z-index: 1;
        }

        img {
          width: 100%;
          height: 100%;
          object-fit: cover;
          position: absolute;
          top: 0;
          left: 0;
        }
      }
      
      /* Custom shape divider styles */
      .custom-shape-divider-bottom-1746819066 {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        overflow: hidden;
        line-height: 0;
        transform: rotate(180deg);
        z-index: 2;
        
        svg {
          position: relative;
          display: block;
          width: calc(108% + 1.3px);
          height: auto;
          min-height: 70px;
          height: clamp(70px, 15vw, 209px);
          transform: rotateY(180deg);
        }
        
        .shape-fill {
          fill: #ffffff;
        }
      }
      
      /* Wave divider styles - ADJUSTED for end-of-section placement */
      .wave-divider {
        width: 115vw; /* Full viewport width */
        position: absolute;
        /* Using bottom instead of top positioning */
        bottom: clamp(-5rem, -10vw, -8rem); /* Adjusted values */
        left: 50%; /* Center it */
        transform: translateX(-50%); /* Center it */
        z-index: 3; /* Higher than the bottom shape divider */
        line-height: 0;
        pointer-events: none;
        
        img {
          width: 100%;
          height: auto;
          display: block;
        }
      }
    }
    
    /* Mobile-specific adjustments for the custom shape divider */
    @media only screen and (max-width: 600px) {
      #hero-1785 .custom-shape-divider-bottom-1746819066 svg {
        width: calc(130% + 1.3px);
        position: relative;
        left: -15%;
        height: clamp(50px, 12vw, 70px);
      }
    }
  }

  /* Tablet - 768px */
  @media only screen and (min-width: 48rem) {
    #hero-1785 {
      .cs-container {
        max-width: (1720/16rem);
      }

      .wave-divider {
        /* Adjusted for tablet */
        bottom: clamp(-8rem, -15vw, -12rem);
      }
    }
  }

  /* Desktop - 1024px and above */
  @media only screen and (min-width: 64rem) {
    #hero-1785 {
      .wave-divider {
        /* Adjusted for desktop */
        bottom: clamp(-12rem, -20vw, -18rem);
      }
    }
  }

  /* Large Desktop - 1920px and above */
  @media only screen and (min-width: 120rem) {
    #hero-1785 {
      /* Adjust padding */
      padding-bottom: 14vw;
      
      .wave-divider {
        /* Adjusted for large desktop */
        bottom: clamp(-18rem, -25vw, -24rem);
      }
    }
  }

  /*-- -------------------------- -->
<---          Reviews           -->
<--- -------------------------- -*/

  /* Mobile - 360px */
  @media only screen and (min-width: 0em) {
    #reviews {
      /* Centers the button */
      text-align: center;
      padding: var(--sectionPadding);

      .cs-container {
        width: 100%;
        max-width: (1104/16rem);
        margin: auto;
      }

      .cs-topper {
        text-align: center;
      }

      .cs-title {
        text-align: center;
        max-width: (700/16rem);
      }

      .cs-text {
        text-align: center;
        max-width: (650/16rem);
        /* 88px - 104px */
        margin-bottom: clamp(5.5em, 10.2vw, 6.5em);
      }

      .cs-card-group {
        /* 48px - 64px */
        margin: 0 auto clamp(3rem, 5vw, 4rem);
        padding: 0;
      }

      .cs-item {
        text-align: left;
        list-style: none;
        width: 100%;
        max-width: (542/16rem);
        margin: 0 auto (64/16rem);
        /* Prevents padding from affecting height & width */
        box-sizing: border-box;
        /* Padding L & R - 16px - 32px */
        padding: (60/16rem) clamp(1rem, 3.2vw, 2rem) 0;
        /* 32px - 40px */
        padding-bottom: clamp(2rem, 5.4vw, 2.5rem);
        background: #fff;
        box-shadow: 0px 20px 39px 0px rgba(0, 0, 0, 0.05);
        border-radius: (4/16rem);
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        position: relative;

        &:last-of-type {
          margin-bottom: 0;
        }
      }

      .cs-item-img {
        width: (80/16rem);
        height: (80/16rem);
        position: absolute;
        top: (-40/16rem);
      }

      .cs-item-p {
        font-size: (16/16rem);
        line-height: 1.5em;
        margin: 0 0 (20/16rem);
        padding-bottom: (20/16rem);
        color: var(--bodyTextColor);
        border-bottom: 1px solid #e8e9ec;
      }

      .cs-reviewer {
        font-size: (16/16rem);
        font-weight: 700;
        line-height: 1.5em;
        width: 40%;
        margin: 0 auto 0 0;
        color: var(--headerColor);
        display: block;
      }

      .cs-desc {
        font-size: (14/16rem);
        font-weight: 400;
        color: var(#353535);
        display: block;
      }

      .cs-item-stars {
        width: (96/16rem);
        height: (16/16rem);
      }
    }
  }

  /* Tablet - 768px */
  @media only screen and (min-width: 48em) {
    #reviews {
      .cs-card-group {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: (16/16rem);
      }

      .cs-item {
        /* reset margin so it won't interfere with flexbox */
        margin: 0;
      }
    }
  }

</style>
